<div class="card" id='post-form'>
	<h3 class="card-title text-center text-white mt-0" id="Card_Post">
		Publier
	</h3>
	<div class="card-body">
		<%= form_for @post, remote:true do | f |  %>
		<% if @post.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@post.errors.count, "erreur") %> ont empeche de creer cette publication:</h2>

				<ul>
					<% @post.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		
		<div class="form-group">
			<%= f.label :title, 'Titre' %><br>
			<%= f.text_field :title, autofocus:true, class:"form-control", id:'toggle-post-form' %>
		</div>
<span id='target-post-form' style='display:none'>
		<div class="form-group"> 
			<%= f.label :content, 'Contenu' %><br>
			<%= f.text_area :content, autofocus:true, class:"form-control" %>
		</div>
		<div class="d-flex justify-content-between">
			<div class="form-group"> 
				<%= f.label :category, 'Categorie' %><br>
				<%= f.select(:category, options_for_select(@categories.collect { | c | [c.name, c.id] }), class:" form-control selectpicker", data: {style:"select-with-transition btn-primary btn-round"}) %> 
			</div>
			<div class="form-group mb-0 mt-3"> 
				<%= f.submit class:"btn btn-small btn-primary pull-right btn-messag mb-0" %>
			</div>
		</div>
		<% end %>
</span>	
	</div>
</div>
