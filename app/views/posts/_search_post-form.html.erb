<div class="card mb-1 mt-1" id='post-form'>
	<div class="card-body p-2">
		<%= form_tag posts_path, method: :get, remote: true do %>
		<p class='mt-1 mb-0 text-center'>
			<%= text_field_tag :search, params[:search], placeholder:'Rechercher une publication', class:"form-control bg-realwhite" %>
			<%= submit_tag "Recherche", name: nil, autofocus: true, class:"btn btn-sm btn-round btn-primary mt-3 ml-2", data: {toggle:"tooltip", placement:"top"}, title:"Rechercher parmis les publications" %>
		</p>
		<% end %>
	</div>
</div>
