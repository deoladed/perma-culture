  <h4 class="mt-3 text-julien ">Cat√©gories</h4>
  <ul class="nav-tabs nav-tabs-neutral" role="tablist">
    <li class='category-list' id='cat-all'>Toutes</li>
    <% @categories.each do |categorie| %>
    <li class='category-list' id='cat-<%= categorie.id %>'><%= categorie.name %></li>
