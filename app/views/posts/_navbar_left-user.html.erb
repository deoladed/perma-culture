
<div class="card mt-3 mb-1 text-center justify-content-center" id="User_card">
  <h3 class="text-center card-header" id="User_Name">
    <p class='text-julien'>.</p>
  </h3>
  <div class="row ml-4">
    <div>
      <%= image_tag current_user.avatar, class:'rounded-circle img-raised', alt:"Votre photo de profil", size:'64x64' %>
    </div>
    <div>
      <h3 class='mb-0'><%= link_to current_user.user_name.capitalize, user_path(current_user), class:'text-dark ml-0' %></h3>
      <p style='margin-top: -10px;' class='ml-3'>Permaculteur</p>
    </div>
  </div>
  <hr class='mb-0'>
  <div class="row">
    <div class="col-md-12 d-flex flex-wrap justify-content-around text-julien">
      <div class="social-description">
        <h4 class='mb-1'><%= current_user.posts.size %></h4>
        <p class='font-weight-bold'>Publications</p>
      </div>
      <div class="social-description">
        <h4 class='mb-1'><%= current_user.comments.size %></h4>
        <p class='font-weight-bold'>Commentaires</p>
      </div>
    </div>
  </div>
</div>

<div class="card text-center mt-2 mb-1 justify-content-center">
  <h4 class="mt-3 text-julien ">Catégories</h4>
  <ul class="nav-tabs nav-tabs-neutral" role="tablist">
    <li class='category-list' id='cat-all'>Toutes</li>
    <% @categories.each do |categorie| %>
    <li class='category-list' id='cat-<%= categorie.id %>'><%= categorie.name %></li>
    <%end%>
  </ul>
</div>

<div class="card text-center mt-2 mb-1 justify-content-center">
  <h4 class="text-center mt-3 text-julien ">Mes articles</h4>
  <ul class="nav-tabs nav-tabs-neutral text-center" role="tablist">
    <% current_user.posts.each do |post| %>
    <li><%= post.title %></li>
    <%end%>
  </ul>
</div>

<div class="card text-center mt-2 mb-1 justify-content-center">
  <h4 class="text-center mt-3 text-julien ">Mes catégories</h4>
  <ul class="nav-tabs nav-tabs-neutral text-center" role="tablist">
    <% current_user.categories.each do |category| %>
    <li><%= category.name %></li>
    <%end%>
  </ul>
</div>
