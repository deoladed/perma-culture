
<div class="card mt-3 mb-1 text-center justify-content-center" id="User_card">
  <div class="cover"><%= image_tag 'bg-0.jpg' %>
  </div>
  <div class="user-info">
    <div class="profile-pic mb-0"><%= link_to edit_user_path(current_user.id) do %><%= image_tag current_user.avatar_medium, alt:"Votre photo de profil" %><% end %>
    </div>
    <div class="username">
      <h3 class='mb-0'>@<%= link_to current_user.user_name.capitalize, user_path(current_user), class:'text-dark' %></h3>
      <p>Permaculteur</p>
    </div>
    <hr class='mb-0'>
    <div class="row">
      <div class="col-md-12 d-flex flex-wrap justify-content-around text-julien">
        <div class="social-description">
          <h4 class='mb-1 mt-2'><%= current_user.posts.size %></h4>
          <p class='font-weight-bold'>Publications</p>
        </div>
        <div class="social-description">
          <h4 class='mb-1 mt-2'><%= current_user.comments.size %></h4>
          <p class='font-weight-bold p2'>Commentaires</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'search_post-form' %>

<div class="card text-center mt-2 mb-1 justify-content-center">
  <h4 class="mt-3 text-julien ">Cat√©gories</h4>
  <ul class="nav-tabs nav-tabs-neutral" role="tablist">
    <li class='category-list' id='cat-all'>Toutes</li>
    <% @categories.each do |categorie| %>
    <li class='category-list' id='cat-<%= categorie.id %>'><%= categorie.name %></li>
    <%end%>
  </ul>
</div>

<div class="card text-center mt-2 mb-1 justify-content-center">
  <h4 class="text-center mt-3 text-julien ">Mes articles</h4>
  <ul class="nav-tabs nav-tabs-neutral text-center" role="tablist">
    <% current_user.posts.each do |post| %>
    <li><%= post.title %></li>
    <%end%>
  </ul>
</div>