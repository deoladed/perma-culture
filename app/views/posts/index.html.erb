<p id="notice"><%= notice %></p>
<% content_for :background_banner, "agriculture.jpg" %>
<%= render 'shared/banner_sm' %>


<table>
  <tbody>
    <div class="row">
      <div class="col-md-1"></div>
      <!-- ----------------- NAV LEFT (PARTIAL ?) ---------------- -->
      <div class="col-md-2">
        <div class="card mt-3 text-center justify-content-center" id="User_card">
          <div>  
            <%= image_tag current_user.avatar %>
          </div>
          <h3 class="text-center card-header" id="User_Name">
            <%= link_to current_user.user_name.capitalize, user_path(current_user)%>
          </h3>
          <div class="row">
            <div class="col-md-12 d-flex flex-wrap justify-content-around text-julien">
              <div class="social-description">
                <h3 class='mb-1'><%= current_user.posts.size %></h3>
                Publications
              </div>
              <div class="social-description">
                <h3 class='mb-1'><%= current_user.comments.size %></h3>
                Commentaires
              </div>
            </div>
          </div>
          <h4 class="text-center mt-5 text-julien user-pres">Mes articles</h4>
          <ul class="nav-tabs nav-tabs-neutral text-center" role="tablist">
            <% current_user.posts.each do |post| %>
              <li><%= post.title %></li>
            <%end%>
          </ul>

          <h4 class="text-center mt-5 text-julien user-pres">Mes catégories</h4>
          <ul class="nav-tabs nav-tabs-neutral text-center" role="tablist">
            <% current_user.categories.each do |category| %>
             <li><%= category.name %></li>
            <%end%>
          </ul>
        </div>
      </div>

    <!-- ------------------- MAIN SECTION ------------ -->
      <div class="container col-md-6 justify-content-center md-auto mt-3">
        <%= render 'index_form' %>
        <span id="sectionposts">
          <%= render @posts %>
        </span>
      </div>
      <!-- -------------------- NAV RIGHT ------------------ -->
      <div class="card col-md-2 ml-auto mt-3">
        <div class="card-body text-center">
          <h5><i class="now-ui-icons ui-1_email-85"></i>  Envie d'échanger?</h5>
          <% @users.each do |user| %>
            <p class="card bg-julien"><%= link_to user.user_name.capitalize, conversations_path(user_id: user), remote: true, method: :post, class:'text-white' %></p>
          <% end %>
        </div>
      </div>
      <!-- ---------------------------------------------------------->
      <div class="col-md-1"></div>
    </div>
  </tbody>
</table>



<!-- ------------------------------- MESSAGES ------------------ -->
<div id="conversations-list" class="fixed-bottom d-flex justify-content-end align-items-end">
  <div class="row">
    <% @conversations.each do |conversation| %>
      <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
    <% end %>
  </div>
</div>


<script>
$(document).ready(function() {
  <% @conversations.each do |conversation| %>
    // $.post(`/conversations/<%= conversation.id %>/close`, { id: `<%= conversation.id %>`}, 
    //     function(returnedData){
    //          console.log(returnedData);
    // });
    $('#conversations-list').find("[data-conversation-id='" + "<%= conversation.id %>" + "']").parent().remove();
  <% end %>
});
</script>