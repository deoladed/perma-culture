<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Witter</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.writter.user_name %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <div class="container">
      <div class="card card-plain card-blog">
                    <% if post.picture.lengh < 1 %>
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="..." alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
                    <% elsif post.picture.lengh == 1 %>
                    <div class="card-image">
                            <img class="img img-raised rounded" src="<%post.picture%>">
                    </div>
                    <%end%>

                    

                    <h3 class="card-title">
                        <a href="#pablo"><%= post.title%></a>
                    </h3>

                    <h5 class="card-description">
                        <%=post.content%>
                    </h5>

                    <a href="#pablo" class="btn btn-primary btn-round"> Read More</a>
                </div>
    <% end %>
    </div>
    
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
