<p id="notice"><%= notice %></p>
<% content_for :background_banner, "agriculture.jpg" %>
<%= render 'shared/banner_sm' %>


<table>
  <tbody>
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-2 ">
        <div class="card text-center justify-content-center" id="User_card">
          <div class="card-header">  
            <%= image_tag(current_user.avatar, class:'card-rounded-circle circle img-raised')%>
          </div>
          <h3 class="text-center card-header" id="User_Name"><%= link_to "#{current_user.user_name}", user_path(current_user)%></h3>
          
          <ul class="nav nav-tabs nav-tabs-neutral text-center" role="tablist">
            <h4 class="text-center mt-5">Mes articles</h4>
            <% current_user.posts.each do |post| %>
            <li class="text-center"><%= post.title %></li>
            <%end%>
          </ul>
          
          <ul class="nav nav-tabs nav-tabs-neutral text-center" role="tablist">
            <h4 class="mt-5 text-center">Mes cat√©gories</h4>
            <% current_user.categories.each do |category| %>
            <li class="text-center"><%=category.name%></li>
            <%end%>
          </ul>
        </div>
      </div>
      


      <div class="container col-md-6 justify-content-center">
        <% @posts.each do |post| %>        
        <div class="card pl-3 pr-3">
          <% if post.post_pictures.length > 1 %>
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="..." alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <% elsif post.post_pictures.length == 1 %>
          <div class="card-image">
            <img class="img img-raised rounded" src="<%post.picture%>">
          </div>
          <%end%>
          
          <h3 class="card-title text-center" id="Card_Post">
            <a href="#pablo"><%= post.title%></a>
          </h3>
          <h5 class="card-body">
            <%=post.content[1..-3]%>
            <strong class="card text-center w-25" ><%=post.category.name%></strong><br>
            <div><%= pluralize(post.likes.size, "like")%></div> 
            <div><%= pluralize(post.comments.size, "commentaire")%></div><br>
            <% post.comments.each do |comments|%>
            <%= comments.content%> <br>
            <% end -%>
            <div>
              <div class="text-center" >
                Ecrivez votre commentaire : 
              </div>

              <div class='justify-content-center text-center'>
                <%= form_tag(post_comments_path(post.id)) do -%>
                <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
                <%= text_area_tag 'Comment_text', nil, size: "25x4" %>
                <%= submit_tag 'Commenter', class:'btn btn-primary btn-round btn-block justify-content-center ' %>
                <% end -%>
              </div>
            </div>     
          </h5>

        </div>
        <% end %>
      </div>
      <div class="col-md-3">
        <div class="card" id='user-list'>
          <div class="card-header">
            Envie d'echanger ?
          </div>
          <div class="card-body">
            <ul class='conversations-ul'>
              <% @users.each do |user| %>
              <li><%= link_to user.user_name.capitalize, conversations_path(user_id: user), remote: true, method: :post %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </tbody>
</table>    






    <div id="conversations-list" class="fixed-bottom d-flex justify-content-end align-items-end">
      <div class="row">
        <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
        <% end %>
      </div>
    </div>


<script>
$(document).ready(function() {
  <% @conversations.each do |conversation| %>
    // $.post(`/conversations/<%= conversation.id %>/close`, { id: `<%= conversation.id %>`}, 
    //     function(returnedData){
    //          console.log(returnedData);
    // });
    $('#conversations-list').find("[data-conversation-id='" + "<%= conversation.id %>" + "']").parent().remove();
  <% end %>
});
</script>
