<p id="notice"><%= notice %></p>

<h1 class="mt-5 text-center">Les dernières actualités !</h1>

<table>
  <tbody>
    <div class="row">
      <div class="col-md-3 ">
        <%= image_tag(current_user.avatar)%>
        <h3 class="text-center mt-5"><%=link_to "#{current_user.user_name}", user_path(current_user)%></h3>
        

        <div class="card mt-5 text-center justify-content-center">
          <ul class="justify-content-center text-center" role="tablist">
            <h4 class="mt-5 text-center">Liste de mes articles</h4>
            <% current_user.posts.each do |post| %>
            <li class="text-center"><%= post.title %></li>
            <%end%>
          </ul>
      
        
          
          <ul class="nav nav-tabs nav-tabs-neutral justify-content-center" role="tablist">
            <h4 class="mt-5 text-center">Catégories</h4>
            <% current_user.categories.each do |category| %>
            <li class="text-center"><%=category.name%></li>
            <%end%>
          </ul>
        </div>


        <h3 class="mt-5 text-center">Catégories</h3>
        <% current_user.categories.each do |category| %>
        <p class="text-center"><%=category.name%></p>
        <%end%>

        <h5 class="text-center"><%=link_to 'Partager vos connaissances !', new_post_path %></h5> 
      </div>
      <div class="container col-md-6">
        <% @posts.each do |post| %>        
        <div class="card card-plain card-blog">
          <% if post.post_pictures.length > 1 %>
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="..." alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <% elsif post.post_pictures.length == 1 %>
          <div class="card-image">
            <img class="img img-raised rounded" src="<%post.picture%>">
          </div>
          <%end%>
          <h3 class="card-title">
            <a href="#pablo"><%= post.title%></a>
          </h3>
          <h5 class="card-description">
            <%=post.content[1..-3]%>
            <strong><%=post.category.name%></strong> <br>
            <%= pluralize(post.likes.size, "like") %>
            <%= pluralize(post.comments.size, "comment") %> <br>
          </h5>

        </div>
        <% end %>
      </div>
      <div class="col-md-3">
        <h5>Envie d'échanger?</h5>
        <h3 class="card-title">
          Ajouter liste des users pour messagerie
        </h3>
      </div>
    </div>

  </tbody>

</table>    






