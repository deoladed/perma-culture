<%= form_for(:user, url: session_path(:user)) do |f| %>

<div class="content sign_in left4">
  <div class="container ">
    <div class="col-lg-5 col-md-4 col-sm-12 ml-auto mr-auto">
      <div class="card card-login card-plain">
        <form class="form" method="" action="">
          <div class="card-header text-center">
            <div class="logo-container mb-4">
              <%= image_tag 'icone-logo.png' %>
            </div>
            <div class="card-body">
              <div class="input-group form-group-no-border input-lg">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="now-ui-icons ui-1_email-85 mr-2"></i></span>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:'form-control', style:'height: 46px;' %>
              </div>
              <div class="input-group form-group-no-border input-lg">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="now-ui-icons ui-1_lock-circle-open mr-2"></i></span>
                </div>
                <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:'form-control', style:'height: 46px;' %>
              </div>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <center>
              <div class="card-footer col-6">
                <%= f.submit "Se connecter", class:"btn btn-primary btn-round btn-block align-middle" %>
              </div>
            </center>
            <div>
              <div class="pull-left">
                <h6>
                  <%= link_to 'Créer un compte', new_user_registration_path, class:"link footer-link"  %>
                </h6>
              </div>
              <div class="pull-right">
                <h6>
                  <%= link_to 'Mot de passe oublié ?', new_user_password_path, class:"link footer-link"  %>
                </h6>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<% end %>
